FROM centos:7

LABEL version=1.0
LABEL vendor=wilson

RUN yum install httpd -y

WORKDIR /var/www/html

COPY index.html .

ENV key value
ENV otro valor
RUN echo "$key" > ./prueba.html
RUN echo "$otro" > /var/www/html/otra.html

RUN echo "$(whoami)" > ./user1.html


RUN useradd wilson

USER wilson

RUN echo "$(whoami)" > /tmp/user2.html

VOLUME /var/www/html

USER root

RUN cp /tmp/user2.html /var/www/html/user2.html


EXPOSE 8080

CMD apachectl -DFOREGROUND